@model Membership


<div class="text-center container drop-shadow p-5">
  <h1 class="display-4 mb-5">Create A Membership for Users to Join</h1>

  <div>
    <form asp-action="CreateMembership" asp-controller="Membership" method="post">
      <table>
            <tbody>
                <tr class="m-2">
                    <th class="col-2 display-6">
                      <label asp-for="MembershipType" class="form-label"></label>
                    </th>
                    <td class="col-6 display-6">
                      <input asp-for="MembershipType" type="text">
                      <span asp-validation-for="MembershipType"></span>
                    </td>
                </tr>
                <tr class="m-2">
                    <th class="col-2 display-6">
                      <label asp-for="Description" class="form-label"></label>
                    </th>
                    <td class="col-6 display-6">
                      <textarea name="Description" cols="30" rows="10"></textarea>
                      <span asp-validation-for="Description"></span>
                    </td>
                </tr>
                <tr class="m-2">
                    <th class="col-2 display-6">
                      <label asp-for="Price" class="form-label"></label>
                    </th>
                    <td class="col-6 display-6">
                      <input asp-for="Price" type="number">
                      <span asp-validation-for="Price"></span>
                    </td>
                </tr>
                    <tr class="m-2">
                    <th class="col-2 display-6">
                      <label asp-for="Notes" class="form-label"></label>
                    </th>
                    <td class="col-6 display-6">
                      <textarea name="Notes" cols="30" rows="10"></textarea>
                    </td>
                </tr>
            </tbody>
        </table>
      <div>
        <input type="submit" value="submit">
      </div>
    </form>

    <div>



    </div>

  </div>
</div>

